<style type="text/css" media="screen">
  #editor { 
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>

<div class="row">
  <div class="col-sm-6">
    <h1>This is a test with ACE</h1>
    
    <%= form_for @code, :html => { :class => "form-horizontal artifact" } do |f| %>
    
    <div class="form-group">
      <%= f.label :textArea, "Text Area", :class => 'control-label col-sm-2' %>
      <div class="col-sm-10">
        <%= f.text_field :textArea, :class => 'form-control' %>
      </div>
      <%= f.submit nil, :class => 'btn btn-primary' %>
    </div>
    
    <% end %>
    
    <%= link_to "Go Back", root_path %>
  </div>
  <div class="col-sm-offset-6" id="editor">function foo(items) {
    var x = "All this is syntax highlighted";
    return x;
  }</div>
</div>
    
<script src="/ace-builds/src-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/javascript");
</script>